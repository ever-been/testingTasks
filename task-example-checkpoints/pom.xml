	<modelVersion>4.0.0</modelVersion>

	<artifactId>task-example-checkpoints</artifactId>

	<dependencies>
		<dependency>
			<groupId>cz.cuni.mff.d3s.been</groupId>
			<artifactId>task-api</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>cz.cuni.mff.d3s.been</groupId>
				<artifactId>bpk-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>buildpackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>

					<taskDescriptors>
						<param>src/main/resources/ExampleTaskCheckpoints.td.xml</param>
					</taskDescriptors>

				</configuration>
			</plugin>
		</plugins>
	</build>

</project>